rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /menuItems/{menuItem} {
      allow read: if true;  // Allows public access to read menu items
      allow write: if request.auth != null;  // Allow authenticated users to write
    }
    
    match /gallery/{image} {
      allow read: if true;  // Allow public access to view gallery
      allow write: if request.auth != null;  // Only authenticated users can modify
    }
    
    // Default rule - deny everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
} 