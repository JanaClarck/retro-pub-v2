rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /gallery/{allPaths=**} {
      allow read: if true;  // Allow public access to view images
      allow write: if request.auth != null  // Only authenticated users can upload/delete
                  && request.resource.size < 5 * 1024 * 1024  // Max 5MB
                  && request.resource.contentType.matches('image/.*');  // Only images
    }
  }
} 